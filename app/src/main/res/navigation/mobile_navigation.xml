<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.shop_project.ui.home.HomeActivity"
        android:label="@string/title_home"
        tools:layout="@layout/home_activity" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.shop_project.ui.Person.PersonFragment"
        android:label="@string/search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_shop"
        android:name="com.example.shop_project.ui.notifications.NotificationsFragment"
        android:label="@string/shop"
        tools:layout="@layout/fragment_shop" />


    <fragment
        android:id="@+id/navigation_person"

        android:label="@string/person"
        tools:layout="@layout/fragment_person" />


</navigation>